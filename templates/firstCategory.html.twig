{% include 'base.html.twig' %}
{% block body %}

        <div class="container">
            <input class="form-control" id="listSearch" type="text" placeholder="Type something to search list items">
            <br>
            <ul class="list-group list-group-horizontal" id="myList" style="list-style-type:none;">
                <div class="row">

                    {% for product in products %}

                        <li >
                            <div class="col-4  rounded m-2">
                                <div class="card " style="width: 18rem;">
                                    <img class="card-img-top rounded mx-auto d-block" src="/Images/demo-image.jpg" alt="Card image cap" style="height: 200px;width: 200px">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ product.name }}</h5>
                                        <p class="card-text">Something here</p>
                                        <a href="#" class="btn btn-success">See all</a>
                                        <a href="#" class="btn btn-success">Add to cart</a>
                                    </div>
                                </div>
                            </div>


                        </li>
                    {% endfor %}

                </div>



            </ul>
        </div>

    <script>
        //Filter list


            $("#listSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myList li").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

    </script>
{% endblock %}
